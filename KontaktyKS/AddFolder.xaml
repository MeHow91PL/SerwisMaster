        <TextBox Grid.Row="1" HorizontalAlignment="Left" Margin="32,55,0,0" Name="nazwaTextBox" Width="402" BorderBrush="#FF030303" FontFamily="Verdana" Height="24" VerticalAlignment="Top" />
        <Button Content="Zapisz" Grid.Row="1" Height="23" HorizontalAlignment="Left" Margin="196,107,0,0" Name="zapiszButton" VerticalAlignment="Top" Width="79" BorderBrush="Black" Background="White" Click="zapiszButton_Click"/>
    </Grid>
</Window>
