        <TextBlock HorizontalAlignment="Left" Margin="184,9,0,0" Name="databasePathTitle" Text="Nazwa folderu"  VerticalAlignment="Top" FontFamily="Verdana" TextAlignment="Center" TextTrimming="None" FontWeight="Bold" />
